# .env - IMPORTANT: Replace these values with your actual settings

# --- Database Connection ---
# Make sure you create this user and database in MariaDB first.
DATABASE_URL="mysql+pymysql://dashboard_user:YourStrongDbPassword@localhost/dashboard_db"

# --- Security Keys ---
# Replace these with strong, randomly generated values.
SECRET_KEY="a_very_strong_and_random_jwt_secret_key_of_at_least_32_characters"
ENCRYPTION_KEY="put_a_fernet_generated_key_here_for_encryption" # Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

# --- External API Keys ---
GEMINI_API_KEY="your_google_gemini_api_key_here"

# --- VAPID Keys for Push Notifications ---
# Generate with a tool like `npx web-push generate-vapid-keys`
VAPID_PUBLIC_KEY="your_vapid_public_key_here"
VAPID_PRIVATE_KEY="your_vapid_private_key_here"
VAPID_CLAIMS_EMAIL="mailto:your_email@example.com"
